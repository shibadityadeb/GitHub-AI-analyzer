# ============================================================================
# GitHub Portfolio Analyzer - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ----------------------------------------------------------------------------
# GitHub API Configuration
# ----------------------------------------------------------------------------
# Optional: Increases rate limit from 60 to 5000 requests/hour
# Get token at: https://github.com/settings/tokens
# Required scopes: public_repo (read-only access to public repositories)
GITHUB_TOKEN=

# ----------------------------------------------------------------------------
# AI Service Configuration (Optional - for enhanced feedback)
# ----------------------------------------------------------------------------
# Option 1: OpenAI API Key
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Option 2: OpenRouter API Key (alternative to OpenAI)
# Get key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# AI Model Configuration (only if using AI feedback)
AI_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1500

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
# API Prefix
API_V1_PREFIX=/api

# Project Name
PROJECT_NAME=GitHub Portfolio Analyzer

# CORS Allowed Origins (comma-separated for production)
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ----------------------------------------------------------------------------
# GitHub API Configuration (usually no need to change)
# ----------------------------------------------------------------------------
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_API_VERSION=2022-11-28

# ----------------------------------------------------------------------------
# Analysis Parameters
# ----------------------------------------------------------------------------
MIN_REPOS_FOR_ANALYSIS=1
MAX_REPOS_TO_ANALYZE=50
RECENT_ACTIVITY_DAYS=365

# ----------------------------------------------------------------------------
# Scoring Weights (should sum to 100)
# ----------------------------------------------------------------------------
WEIGHT_ACTIVITY=25.0
WEIGHT_DOCUMENTATION=20.0
WEIGHT_QUALITY=25.0
WEIGHT_PROFESSIONALISM=15.0
WEIGHT_IMPACT=15.0
